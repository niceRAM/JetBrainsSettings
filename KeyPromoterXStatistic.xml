<application>
  <component name="KeyPromoterXStatistic">
    <option name="statistics">
      <Statistic Action="Project">
        <Item>
          <IdeaActionID>ActivateProjectToolWindow</IdeaActionID>
          <ShortCut>'Alt+1'</ShortCut>
          <Description>Project</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Show Translation Dialog...">
        <Item>
          <IdeaActionID>$ShowTranslationDialogAction</IdeaActionID>
          <ShortCut>'Ctrl+Shift+O'</ShortCut>
          <Description>Show Translation Dialog...</Description>
          <Count>2</Count>
        </Item>
      </Statistic>
      <Statistic Action="Translate">
        <Item>
          <IdeaActionID>$EditorTranslateAction</IdeaActionID>
          <ShortCut>'Ctrl+Shift+Y'</ShortCut>
          <Description>Translate</Description>
          <Count>4</Count>
        </Item>
      </Statistic>
      <Statistic Action="Translate and Replace...">
        <Item>
          <IdeaActionID>$TranslateAndReplaceAction</IdeaActionID>
          <ShortCut>'Ctrl+Shift+X'</ShortCut>
          <Description>Translate and Replace...</Description>
          <Count>2</Count>
        </Item>
      </Statistic>
      <Statistic Action="Variable...">
        <Item>
          <IdeaActionID>IntroduceVariable</IdeaActionID>
          <ShortCut>'Alt+Shift+L' or 'Ctrl+Alt+V'</ShortCut>
          <Description>Variable...</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
    </option>
  </component>
</application>